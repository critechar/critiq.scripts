pkgname=rofi
pkgver=0.15.2
pkgrel=1
pkgdesc="Popup window switcher roughly based on superswitcher, requiring only xlib and xft. DaveDavenport's fork"
arch=('i686' 'x86_64')
url="https://davedavenport.github.io/rofi/"
license=('MIT')
depends=('libx11' 'libxft' 'freetype2' 'libxdg-basedir' 'libxinerama')
optdepends=('i3-wm: use as a window switcher')
source=("https://github.com/DaveDavenport/${pkgname}/releases/download/${pkgver}/${pkgname}-${pkgver}.tar.gz"
        so_d_dmenu-dialog.c.patch)
md5sums=('9cfd121d0dd9448f361973abf1103ddf'
         '781c1e0479ee9910d70039c7bf422d32')

build() {
  cd "${pkgname}-${pkgver}"
  ./configure --prefix=/usr
  # shift+enter in dmenu mode will only output whatever the user entered, ignoring the selected item.
  patch "source/dialogs/dmenu-dialog.c" "${startdir}/so_d_dmenu-dialog.c.patch"
  make
}

package() {
  cd "${pkgname}-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
