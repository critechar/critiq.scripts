URxvt*buffered:        true
URxvt*depth:           32
!URxvt*borderLess:      true
URxvt*scrollBar:       false
URxvt*loginShell:      true
! Enable Shift-PageUp/Down in screen
Urxvt*secondaryScroll: true
URxvt*saveLines:       4096
! scroll-to-bottom on keypress
URxvt*scrollTtyKeypress: true
! scroll-to-bottom on TTY output
URxvt*scrollTtyOutput: false
! scrolling with the scrollback buffer as new lines appear (try to show
! the same lines), but only if scrollTtyOutput = false
URxvt*scrollWithBuffer: true
URxvt*iso14755:        false

URxvt.perl-ext-common: default,matcher,keyboard-select,clipboard
URxvt.perl-lib:        /home/shared/urxvt/perl/
! middle click on a url to open in firefox
URxvt.url-launcher:    /usr/bin/firefox
URxvt.keysym.M-Escape: keyboard-select:activate
URxvt.keysym.M-c:      clipboard:copy
URxvt.keysym.M-v:      clipboard:paste
URxvt.keysym.M-C-v:    clipboard:paste_escaped

