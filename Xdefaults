!! urxvt
URxvt*background:      #1A1C1D
URxvt*foreground:      #E6E6E6
URxvt*font:            xft:MonacoB:size=9.7,xft:Inconsolata for Powerline:size=11.4
! # Fonts installation: {{{
! mkdir -p ~/.local/share/fonts
! curl -fLo ~/.local/share/fonts/Inconsolata\ for\ Powerline.otf \
!   https://raw.githubusercontent.com/powerline/fonts/master/Inconsolata/Inconsolata%20for%20Powerline.otf
! curl -fLo ~/.local/share/fonts/MonacoB.otf \
!   https://raw.githubusercontent.com/vjpr/monaco-bold/master/MonacoB/MonacoB.otf
! curl -fLo ~/.local/share/fonts/MonacoB-Bold.otf \
!   https://raw.githubusercontent.com/vjpr/monaco-bold/master/MonacoB/MonacoB-Bold.otf
! fc-cache -f
! # }}}
URxvt*buffered:        true
URxvt*depth:           32
!URxvt*borderLess:      true
URxvt*scrollBar:       false
URxvt*loginShell:      true
! Enable Shift-PageUp/Down in screen
Urxvt*secondaryScroll: true
URxvt*saveLines:       4096
! scroll-to-bottom on keypress
URxvt*scrollTtyKeypress: true
! scroll-to-bottom on TTY output
URxvt*scrollTtyOutput: false
! scrolling with the scrollback buffer as new lines appear (try to show
! the same lines), but only if scrollTtyOutput = false
URxvt*scrollWithBuffer: true
! disable Ctrl+Shift input of extended characters
URxvt*iso14755:        false

URxvt.perl-ext-common: default,matcher,keyboard-select,clipboard
URxvt.perl-lib:        /home/shared/urxvt/perl/
! middle click on a url to open in firefox
URxvt.url-launcher:    /usr/bin/firefox
URxvt.keysym.M-Escape: keyboard-select:activate
URxvt.keysym.M-c:      clipboard:copy
URxvt.keysym.M-v:      clipboard:paste
URxvt.keysym.M-C-v:    clipboard:paste_escaped

