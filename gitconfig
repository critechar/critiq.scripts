[alias]
	ca = commit --amend
	co = checkout
	d = diff --find-copies
	dh = diff --find-copies HEAD
	ds = diff --staged --find-copies
	l = log --graph --decorate --oneline
	lg = log --graph --pretty=format:'%C(cyan)%h%C(bold cyan)%d%Creset %s %C(bold black)(%cr)%Creset by %C(yellow)%an%Creset'
	lt = log --graph --decorate --oneline --stat
	pf = push --force
