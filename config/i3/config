# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Set Alt/Meta as $mod and Super as $mod4
set $mod Mod1
set $mod4 Mod4

bindsym XF86AudioRaiseVolume exec amixer -q sset Master 5%+ unmute
bindsym XF86AudioLowerVolume exec amixer -q sset Master 5%- unmute
bindsym XF86AudioMute exec amixer -q sset Master toggle
bindsym $mod4+f exec dbus-launch thunar

bindsym $mod4+i exec firefox
for_window [class="^Firefox$" instance="^Navigator$"] move container to workspace 2:wot, workspace number 2
# Enable floating mode for all windows that Firefox spawns
for_window [class="^Firefox$" instance="^(?!Navigator)"] floating enable, border normal

# Enable floating mode for File Progress windows of Thunar
for_window [instance="^thunar$" title="^File\ Operation\ Progress$"] floating enable, border normal

# [class="Vlc" window_role="vlc\\-main"] # Run i3-save-tree to know more attributes!
bindsym $mod4+v [instance="vlc"] focus
bindsym $mod4+Shift+v exec vlc
for_window [instance="vlc"] move container to workspace 5:V, workspace number 5

bindsym --release Print exec --no-startup-id import /tmp/latest-screenshot.png

# Make the currently focused window a scratchpad
bindsym $mod4+minus move scratchpad

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

focus_follows_mouse no
hide_edge_borders both
new_window pixel 2

# class                 border  backgr. text    indicator
client.focused          #4c7899 #407196 #ffffff #2e9ef4
client.focused_inactive #333333 #40474a #ffffff #484e50

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:FontAwesome 7.5

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod4

# start a terminal
bindsym $mod4+Return exec urxvtc #i3-sensible-terminal
bindsym $mod+Return exec urxvtc #i3-sensible-terminal

bindsym $mod4+Shift+Return exec urxvtc -e nvim
bindsym $mod+Shift+Return exec urxvtc -e nvim

# kill focused window
bindsym $mod4+q kill
bindsym $mod+q border normal
bindsym $mod+Shift+q border pixel 2

# start a program launcher
bindsym $mod4+x exec rofi -now -show run
#bindsym $mod4+x exec $(dmenu_path|dmenu)

# change focus
bindsym $mod4+h focus left
bindsym $mod4+j focus down
bindsym $mod4+k focus up
bindsym $mod4+l focus right

# move focused window, and make floating containers move more than the default
bindsym $mod4+Shift+h move left 200 px
bindsym $mod4+Shift+j move down 200 px
bindsym $mod4+Shift+k move up 200 px
bindsym $mod4+Shift+l move right 200 px

# alternatively, you can use the cursor keys:
bindsym $mod4+Left move left 100px
bindsym $mod4+Down move down 100px
bindsym $mod4+Up move up 100px
bindsym $mod4+Right move right 100px

# Change focus from the current display output
bindsym $mod4+Shift+Left focus output left
bindsym $mod4+Shift+Right focus output right

# change tiling layout (vertical, toggle)
bindsym $mod4+w split v
bindsym $mod4+e layout toggle split

# enter fullscreen mode for the focused container
bindsym $mod4+s fullscreen

# change container layout tabbed
bindsym $mod4+t layout tabbed

# toggle tiling / floating
bindsym $mod4+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod4+space focus mode_toggle

# focus the parent container
bindsym $mod4+a focus parent

# focus the child container
bindsym $mod4+z focus child

# switch to workspace
bindsym $mod4+1 workspace 1:neo
bindsym $mod4+2 workspace 2:wot
bindsym $mod4+3 workspace 3:III
bindsym $mod4+4 workspace 4:IV
bindsym $mod4+5 workspace 5:V
bindsym $mod4+6 workspace 6:VI
bindsym $mod4+7 workspace 7:VII
bindsym $mod4+8 workspace 8:ate
bindsym $mod4+9 workspace 9:IX
bindsym $mod4+0 workspace 10:X

# cycle workspaces
bindsym $mod4+Tab workspace next
bindsym $mod4+Shift+Tab workspace prev

# move focused container to workspace 
bindsym $mod4+Shift+1 move container to workspace 1:neo; workspace number 1
bindsym $mod4+Shift+2 move container to workspace 2:wot; workspace number 2
bindsym $mod4+Shift+3 move container to workspace 3:III; workspace number 3
bindsym $mod4+Shift+4 move container to workspace 4:IV; workspace number 4
bindsym $mod4+Shift+5 move container to workspace 5:V; workspace number 5
bindsym $mod4+Shift+6 move container to workspace 6:VI; workspace number 6
bindsym $mod4+Shift+7 move container to workspace 7:VII; workspace number 7
bindsym $mod4+Shift+8 move container to workspace 8:ate; workspace number 8
bindsym $mod4+Shift+9 move container to workspace 9:IX; workspace number 9
bindsym $mod4+Shift+0 move container to workspace 10:X; workspace number 10

# reload the configuration file
bindsym $mod+Shift+r reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod4+Shift+r restart

# exit i3
set $exit_mod "(l)ock (E)xit i3 (S)uspend (P)ower off (R)estart"
# exit i3 (logs you out of your X session)
bindsym $mod4+Shift+e mode $exit_mod

mode $exit_mod {
	bindsym l exec --no-startup-id i3lock -i /home/shared/walls/calvin_png/lock-01.png; mode "default"
	bindsym Shift+s exec --no-startup-id systemctl suspend; mode "default"
	bindsym Shift+e exec i3-msg exit; mode "default"
	bindsym Shift+p exec systemctl poweroff; mode "default"
	bindsym Shift+r exec systemctl reboot; mode "default"

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
    bindsym q mode "default"
}

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        bindsym h resize shrink width 250 px or 12 ppt
        bindsym j resize grow height 250 px or 12 ppt
        bindsym k resize shrink height 250 px or 12 ppt
        bindsym l resize grow width 250 px or 12 ppt

        bindsym Left resize shrink width 20 px or 6 ppt
        bindsym Down resize grow height 20 px or 6 ppt
        bindsym Up resize shrink height 20 px or 6 ppt
        bindsym Right resize grow width 20 px or 6 ppt

        bindsym Shift+Left resize shrink width 10 px or 2 ppt
        bindsym Shift+Down resize grow height 10 px or 2 ppt
        bindsym Shift+Up resize shrink height 10 px or 2 ppt
        bindsym Shift+Right resize grow width 10 px or 2 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym q mode "default"
}

bindsym $mod4+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status -c ~/.config/i3/status.conf
		strip_workspace_numbers yes
}

exec --no-startup-id i3-msg "workspace 1:neo; exec urxvtd -o -q -f; exec sleep 1 && urxvtc; exec setxkbmap -option caps:none"

