! appearance
URxvt*font:            xft:MonacoB:size=9.7
! # Fonts installation (requires package libotf): {{{
! mkdir -p ~/.local/share/fonts
! curl -fLo ~/.local/share/fonts/MonacoB.otf \
!   https://raw.githubusercontent.com/vjpr/monaco-bold/master/MonacoB/MonacoB.otf
! curl -fLo ~/.local/share/fonts/MonacoB-Bold.otf \
!   https://raw.githubusercontent.com/vjpr/monaco-bold/master/MonacoB/MonacoB-Bold.otf
! fc-cache -vf
! # }}}
URxvt.depth:           32
URxvt.scrollBar:       false

! interaction
URxvt.saveLines:       4096
! scroll-to-bottom on keypress
URxvt.scrollTtyKeypress: true
! do not scroll-to-bottom on TTY output
URxvt.scrollTtyOutput: false
! scroll with the scrollback buffer as new lines appear (try to show
! the same lines), when scrollTtyOutput = false
URxvt.scrollWithBuffer: true
! disable Ctrl+Shift input of extended characters
URxvt.iso14755:        false

URxvt.loginShell:      true

! disable perl extensions
URxvt.perl-ext-common:
URxvt.perl-ext:

!! perl extensions: needs package urxvt-perls
!URxvt.perl-ext-common: default,matcher,keyboard-select,clipboard
!! middle click on a url to open in firefox
!URxvt.url-launcher:    /usr/bin/firefox
!URxvt.keysym.M-Escape: perl:keyboard-select:activate
!URxvt.keysym.M-c:      perl:clipboard:copy
!URxvt.keysym.M-v:      perl:clipboard:paste
!URxvt.keysym.M-C-v:    perl:clipboard:paste_escaped

! vim:ft=xdefaults:
